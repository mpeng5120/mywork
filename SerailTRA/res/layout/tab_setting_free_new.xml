<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_setting_free_option"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="3" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@drawable/gray" >

            <LinearLayout
                android:id="@+id/tab_setting_free"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/white"
                android:orientation="horizontal" >         
                
				<LinearLayout				  
                    android:layout_width="0dip"
                    android:layout_height="match_parent"   
                    android:layout_weight="1"                 
                    android:layout_margin="2dp"
                    android:orientation="horizontal" >   
                    
                  <RadioGroup 
			        android:id="@+id/armRdioGroup"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"	
					android:layout_gravity="center|top"					
					android:layout_weight="3"							
					android:orientation="vertical">

                      <Button
                          android:id="@+id/OriginButton"
                          android:layout_width="match_parent"
                          android:layout_height="80dip"
                          android:layout_gravity="center"
                          android:layout_marginTop="20dip"
                          android:layout_marginBottom="30dip"
                          android:gravity="center"
                          android:text="原点" 
                          android:textAppearance="?android:attr/textAppearanceLarge"/>

					    <RadioButton
					      android:id="@+id/ProductArm"
						  android:layout_width="match_parent"
						  android:layout_height="80dip"						  
						  android:layout_gravity="center"
						  android:gravity="center"
						  android:button="@null"	
						  android:background="@drawable/radiobtnselector"	
						  android:text="教行制品臂" 
						  android:textAppearance="?android:attr/textAppearanceLarge"/>
					    <RadioButton
					      android:id="@+id/FeedArm"
						  android:layout_width="match_parent"
						  android:layout_height="80dip"
						  android:layout_gravity="center"
						  android:gravity="center"
			 			  android:background="@drawable/radiobtnselector"
						  android:button="@null"
						  android:text="教行料道臂" 
						  android:textAppearance="?android:attr/textAppearanceLarge"/>			
					</RadioGroup>                
              
                 <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"  
                    android:layout_weight="6.5"
                    android:scaleType="fitCenter" />
				</LinearLayout>
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.27"
                    android:layout_margin="2dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/black" >

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:background="@drawable/gray"
                            android:gravity="center"
                            android:text="@string/setting_free_axle" 
                            android:textAppearance="?android:attr/textAppearanceLarge"/>

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:background="@drawable/gray"
                            android:gravity="center"
                            android:text="@string/setting_free_currentPos" 
                            android:textAppearance="?android:attr/textAppearanceLarge"/>

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:background="@drawable/gray"
                            android:gravity="center"
                            android:text="@string/setting_free_originLimit"
                            android:textAppearance="?android:attr/textAppearanceLarge" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/listView_free_setting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >
                    </ListView>
                    <RadioGroup
			             android:id="@+id/speedRadioGroup"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:layout_alignParentRight="true"
			             android:layout_alignParentTop="true"
			             android:layout_gravity="center"
			             android:orientation="horizontal" >
			<RadioButton
                 android:id="@+id/speedBtnSev"
                 android:layout_width="80dip"
                 android:layout_height="80dip"
                 android:layout_gravity="center"    
                 android:gravity="center"                
                 android:background="@drawable/radiobtnselector"
                 android:button="@null"
                 android:text="低速0" 
                 android:textAppearance="?android:attr/textAppearanceLarge"/>
                <RadioButton
                 android:id="@+id/speedBtnsix"
                 android:layout_width="80dip"
                 android:layout_height="80dip"
                 android:layout_gravity="center"     
                 android:gravity="center"               
                 android:background="@drawable/radiobtnselector"
                 android:button="@null"
                 android:text="低速1" 
                 android:textAppearance="?android:attr/textAppearanceLarge"/>
			             <RadioButton
			                 android:id="@+id/speedBtnOne"
			                 android:layout_width="80dip"
			                 android:layout_height="80dip"
			                 android:gravity="center"                 
			                 android:background="@drawable/radiobtnselector"
			                 android:button="@null"
			                 android:text="低速"
			                 android:textAppearance="?android:attr/textAppearanceLarge" />
			
			             <RadioButton
			                 android:id="@+id/speedBtnTwo"
			                 android:layout_width="80dip"
			                 android:layout_height="80dip"
			                 android:gravity="center"
			                 android:background="@drawable/radiobtnselector"
			                 android:button="@null"
			                 android:text="中速" 
			                 android:textAppearance="?android:attr/textAppearanceLarge"/>
			
			             <RadioButton
			                 android:id="@+id/speedBtnThree"
			                 android:layout_width="80dip"
			                 android:layout_height="80dip"
			                 android:gravity="center"
			                 android:background="@drawable/radiobtnselector"
			                 android:button="@null"
			                 android:text="高速" 
			                 android:textAppearance="?android:attr/textAppearanceLarge"/>
			
			             <RadioButton
			                 android:id="@+id/speedBtnFour"
			                 android:layout_width="80dip"
			                 android:layout_height="80dip"
			                 android:gravity="center"
			                 android:background="@drawable/radiobtnselector"
			                 android:button="@null"
			                 android:text="0.1" 
			                 android:textAppearance="?android:attr/textAppearanceLarge"/>
			
			             <RadioButton
			                 android:id="@+id/speedBtnFive"
			                 android:layout_width="80dip"
			                 android:layout_height="80dip"
			                 android:gravity="center"
			                 android:layout_marginRight="10dip"
			                 android:background="@drawable/radiobtnselector"
			                 android:button="@null"
			                 android:text="1.0"
			                 android:textAppearance="?android:attr/textAppearanceLarge" />
			         </RadioGroup>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/white"
            android:gravity="center"
            android:text="@string/setting_free_operate"
            android:textColor="@drawable/blueviolet" 
            android:textAppearance="?android:attr/textAppearanceLarge"/>
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="2" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@null" >           
                    <LinearLayout
                        android:id="@+id/left"
                        android:layout_width="0dip"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"                        
                        android:layout_alignParentBottom="true"
						android:layout_alignParentLeft ="true"						
						android:layout_alignParentTop ="true"
                        android:background="@drawable/red" >  
                         <RadioGroup 
					        android:id="@+id/optionRadioGroup"
							android:layout_width="match_parent"
							android:layout_height="wrap_content"	
							android:layout_gravity="center"	
							android:gravity="center"
							android:orientation="vertical">		                      
		
							    <RadioButton
							      android:id="@+id/gerRadioBtn"
								  android:layout_width="match_parent"
								  android:layout_height="80dip"						  
								  android:layout_gravity="center"
								  android:gravity="center"
								  android:button="@null"									  
								  android:background="@drawable/radiobtnselector"	
								  android:text="通常" 
								  android:textAppearance="?android:attr/textAppearanceLarge"/>
							    <RadioButton
							      android:id="@+id/preRadioBtn"
								  android:layout_width="match_parent"
								  android:layout_height="80dip"
								  android:layout_gravity="center"
								  android:gravity="center"
					 			  android:background="@drawable/radiobtnselector"
								  android:button="@null"
								  android:text="预留" 
								  android:textAppearance="?android:attr/textAppearanceLarge"/>			
							</RadioGroup>               

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/Middle"
                        android:layout_width="0dip"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:background="@drawable/red"
                        android:orientation="vertical" >

                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/Right"
                        android:layout_width="0dip"
                        android:layout_weight="2"
                        android:layout_height="wrap_content"
                        android:background="@drawable/blue" 
                        android:orientation="vertical">                          
                         
                    </LinearLayout>      
        </LinearLayout>

        <TextView
            android:id="@+id/PSpinnerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@drawable/white"
            android:gravity="center"
            android:text="选件操作"
            android:textColor="@drawable/blueviolet" 
            android:textAppearance="?android:attr/textAppearanceLarge"/>
    </FrameLayout>

</LinearLayout>