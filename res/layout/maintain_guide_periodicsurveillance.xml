<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="120dp"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_weight="1" >
        <TextView
           android:id="@+id/textView11"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:gravity="center"
           android:text="@string/main_periodicSurveilliance_molding" />
        <TextView
           android:id="@+id/periodic_modeling"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_weight="1"
           android:gravity="center"
           android:hint="****.**" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" 
        android:layout_weight="1">
        <TextView
          android:id="@+id/textView13"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_weight="1"
          android:gravity="center"
          android:text="@string/main_periodicSurveillance_out" />

        <TextView
         android:id="@+id/periodic_out"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:gravity="center"
         android:hint="****.**" />
    </LinearLayout>
  
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp" 
        android:layout_weight="1">
        <TextView
         android:id="@+id/textView12"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:gravity="center"
         android:text="@string/main_periodicSurveillance_full" />

        <TextView
         android:id="@+id/periodic_full"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:layout_weight="1"
         android:gravity="center"
         android:hint="****.**" />
    </LinearLayout>
  
  
</LinearLayout>





