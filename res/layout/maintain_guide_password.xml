<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/maxz_maintainGuide"
        android:textColor="@color/blueviolet" />

    <RadioGroup
        android:id="@+id/radioGroup_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/radio_operate_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:checked="true"
            android:text="@string/czma_maintainGuide" />

        <RadioButton
            android:id="@+id/radio_setting_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_weight="1"
            android:text="@string/sdma_maintainGuide" />

        <RadioButton
            android:id="@+id/radio_programming_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_weight="1"
            android:text="@string/bcma_maintainGuide" />

    </RadioGroup>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:text="@string/macz_maintainGuide"
        android:textColor="@color/blueviolet" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:gravity="center" >

        <Button
            android:id="@+id/btn_create_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/cjma_maintainGuide" />

        <Button
            android:id="@+id/btn_change_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="@string/xgma_maintainGuide" />

        <Button
            android:id="@+id/btn_delete_password"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/scma_maintainGuide" />

    </LinearLayout>

</LinearLayout>