<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/tab_setting_free_option"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@null"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_weight="3" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@color/gray" >

            <LinearLayout
                android:id="@+id/tab_setting_free"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/white"
                android:orientation="horizontal" >         
                
				<LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"   
                    android:layout_weight="1"                 
                    android:layout_margin="2dp"
                    android:orientation="vertical" >                 
              
                 <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="match_parent"
                    android:layout_height="0dip"  
                    android:layout_weight="7"
                    android:scaleType="fitCenter" />
                 
                 <RadioGroup 
			        android:id="@+id/armRdioGroup"
					android:layout_width="wrap_content"
					android:layout_height="0dip"
					android:layout_gravity="center"					
					android:layout_weight="1"					
					android:orientation="horizontal">
					    <RadioButton
					      android:id="@+id/ProductArm"
						  android:layout_width="100dip"
						  android:layout_height="100dip"
						  android:layout_gravity="center"
						  android:button="@null"	
						  android:background="@drawable/radiobtnselector"	
						  android:text="教行制品臂" />
					    <RadioButton
					      android:id="@+id/FeedArm"
						  android:layout_width="100dip"
						  android:layout_height="100dip"
						  android:layout_gravity="center"
			 			  android:background="@drawable/radiobtnselector"
						  android:button="@null"
						  android:text="教行料道臂" />			
					</RadioGroup>  
                
				</LinearLayout>
                <LinearLayout
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="2dp"
                    android:orientation="vertical" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@null" >

                        <TextView
                            android:id="@+id/textView8"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:background="@color/gray"
                            android:gravity="center"
                            android:text="@string/setting_free_axle" />

                        <TextView
                            android:id="@+id/textView9"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:background="@color/gray"
                            android:gravity="center"
                            android:text="@string/setting_free_currentPos" />

                        <TextView
                            android:id="@+id/textView10"
                            android:layout_width="20dp"
                            android:layout_height="match_parent"
                            android:layout_margin="1dp"
                            android:layout_weight="1"
                            android:background="@color/gray"
                            android:gravity="center"
                            android:text="@string/setting_free_originLimit" />
                    </LinearLayout>

                    <ListView
                        android:id="@+id/listView_free_setting"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >
                    </ListView>
                    <RadioGroup
			             android:id="@+id/speedRadioGroup"
			             android:layout_width="wrap_content"
			             android:layout_height="wrap_content"
			             android:layout_alignParentRight="true"
			             android:layout_alignParentTop="true"
			             android:layout_gravity="center"
			             android:orientation="horizontal" >
			
			             <RadioButton
			                 android:id="@+id/speedBtnOne"
			                 android:layout_width="80dip"
			                 android:layout_height="50dip"
			                 android:gravity="center"                 
			                 android:background="@drawable/radiobtnselector"
			                 android:button="@null"
			                 android:text="低速" />
			
			             <RadioButton
			                 android:id="@+id/speedBtnTwo"
			                 android:layout_width="80dip"
			                 android:layout_height="50dip"
			                 android:gravity="center"
			                 android:background="@drawable/radiobtnselector"
			                 android:button="@null"
			                 android:text="中速" />
			
			             <RadioButton
			                 android:id="@+id/speedBtnThree"
			                 android:layout_width="80dip"
			                 android:layout_height="50dip"
			                 android:gravity="center"
			                 android:background="@drawable/radiobtnselector"
			                 android:button="@null"
			                 android:text="高速" />
			
			             <RadioButton
			                 android:id="@+id/speedBtnFour"
			                 android:layout_width="80dip"
			                 android:layout_height="50dip"
			                 android:gravity="center"
			                 android:background="@drawable/radiobtnselector"
			                 android:button="@null"
			                 android:text="0.1" />
			
			             <RadioButton
			                 android:id="@+id/speedBtnFive"
			                 android:layout_width="80dip"
			                 android:layout_height="50dip"
			                 android:gravity="center"
			                 android:layout_marginRight="10dip"
			                 android:background="@drawable/radiobtnselector"
			                 android:button="@null"
			                 android:text="1.0" />
			         </RadioGroup>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="@string/setting_free_operate"
            android:textColor="@color/blueviolet" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_weight="2" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@null" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentBottom="false"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1.5"
                android:background="@null"
                android:gravity="center" >
        <LinearLayout
            android:id="@+id/LinearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black" >

        
        <TextView
            android:id="@+id/textView0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:layout_weight="1.1"
            android:background="@color/gray"
            android:gravity="center" 
            android:text="@string/io_address"/>
        <TextView
            android:id="@+id/textView1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:layout_weight="1"
            android:background="@color/gray"
            android:gravity="center"
            android:text="@string/T_Optionaloperate" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:layout_weight="1.1"
            android:background="@color/gray"
            android:gravity="center"
            android:text="@string/i_symbolName" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="1dp"
            android:layout_weight="1.1"
            android:background="@color/gray"
            android:gravity="center"
            android:text="@string/o_symbolName" />

       </LinearLayout>

    <ListView
        android:id="@+id/listView_option"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/LinearLayout1" >
    </ListView>

            </RelativeLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/PSpinnerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@color/white"
            android:gravity="center"
            android:text="选件操作"
            android:textColor="@color/blueviolet" />
    </FrameLayout>

</LinearLayout>