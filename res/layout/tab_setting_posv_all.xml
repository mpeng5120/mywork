<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical" >
                <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:background="@color/black" >

            <TextView
                android:id="@+id/TextView11"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/gray"
                android:gravity="center"
                android:text="位置" />

            <TextView
                android:id="@+id/textView22"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/gray"
                android:gravity="center"
                android:text="@string/setting_foot" />

            <TextView
                android:id="@+id/textView33"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/gray"
                android:gravity="center"
                android:text="@string/setting_productBA" />

            <TextView
                android:id="@+id/textView44"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/gray"
                android:gravity="center"
                android:text="@string/setting_feedertroughBA" />

            <TextView
                android:id="@+id/textView55"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/gray"
                android:gravity="center"
                android:text="@string/setting_productUD" />

            <TextView
                android:id="@+id/textView66"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_margin="1dp"
                android:layout_weight="1"
                android:background="@color/gray"
                android:gravity="center"
                android:text="@string/setting_feedertroughUD" />
        </LinearLayout>
<LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:orientation="horizontal" >

        <TextView
        android:id="@+id/name_all_setting"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:background="@color/gray"
        android:gravity="center" />

        <TextView
        android:id="@+id/foot_all_setting"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:background="@color/gray"
        android:gravity="center"
        android:text="*****.*"
        android:hint="*****.*" />

        <TextView
        android:id="@+id/productBA_all_setting"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:background="@color/gray"
        android:gravity="center" 
        android:hint="*****.*"
        android:text="*****.*"/>

        <TextView
        android:id="@+id/productUD_all_setting"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:background="@color/gray"
        android:gravity="center"
        android:hint="*****.*"
        android:text="*****.*" />

        <TextView
        android:id="@+id/feedertroughBA_all_setting"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:background="@color/gray"
        android:gravity="center"
        android:hint="*****.*"
        android:text="*****.*" />

        <TextView
        android:id="@+id/feedertroughUD_all_setting"
        android:layout_width="50dp"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="1dp"
        android:layout_weight="1"
        android:background="@color/gray"
        android:gravity="center" 
        android:hint="*****.*"
        android:text="*****.*"/>
        </LinearLayout>
       
     <LinearLayout
           android:id="@+id/linearlayout3"
           android:layout_width="match_parent"
           android:layout_height="match_parent" >
          <ListView
            android:id="@+id/listView_P_setting"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
        </ListView>
     </LinearLayout>
        
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:background="@color/gray" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerInParent="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="10dp"
                android:background="@color/white" >

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="200dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/posv" />

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1.5"
                    android:orientation="vertical" >

                    <RelativeLayout
                        android:id="@+id/RelativeLayout1"
                        android:layout_width="match_parent"
                        android:layout_height="100dp"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <LinearLayout
                            android:id="@+id/linerlayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/seekBar_p_setting"
                            android:layout_alignRight="@+id/seekBar_p_setting"
                            android:layout_marginTop="5dp" >

                            <TextView
                                android:id="@+id/gear1_p_setting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:text="-60" />

                            <TextView
                                android:id="@+id/gear2_p_setting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="-30" />

                            <TextView
                                android:id="@+id/gear3_p_setting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="0" />

                            <TextView
                                android:id="@+id/gear4_p_setting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="+30" />

                            <TextView
                                android:id="@+id/gear5_p_setting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_weight="1"
                                android:gravity="right"
                                android:text="+60" />

                        </LinearLayout>

                        <SeekBar
                            android:id="@+id/seekBar_p_setting"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_below="@+id/linerlayout"
                            android:layout_marginLeft="40dp"
                            android:layout_marginRight="40dp"
                            android:layout_marginTop="10dp" />
                         <TextView
                                android:id="@+id/ds_p"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/seekBar_p_setting"
                                android:layout_below="@+id/seekBar_p_setting"
                                android:text="@string/ds_p_Value" />
                         <TextView
                                android:id="@+id/mjs_p"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/seekBar_p_setting"
                                android:layout_below="@+id/seekBar_p_setting"
                                android:text="@string/mjs_p_Value" />
                             <TextView
                                android:id="@+id/mjs_p1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignLeft="@+id/seekBar_p_setting"
                                android:layout_below="@+id/seekBar_p_setting"
                                android:text="@string/mjs_p_Value1" />
                         <TextView
                                android:id="@+id/gs_p"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignRight="@+id/seekBar_p_setting"
                                android:layout_below="@+id/seekBar_p_setting"
                                android:text="@string/gs_p_Value" />
                         <TextView
                                android:id="@+id/kjs_p"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignRight="@+id/seekBar_p_setting"
                                android:layout_below="@+id/seekBar_p_setting"
                                android:text="@string/kjs_p_Value" />
                             <TextView
                                android:id="@+id/kjs_p1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignRight="@+id/seekBar_p_setting"
                                android:layout_below="@+id/seekBar_p_setting"
                                android:text="@string/kjs_p_Value1" />
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/seekBar_p_setting"
                            android:layout_centerHorizontal="true"
                           >
                           
                            <TextView
                                android:id="@+id/textView_tittle_currentValve_p"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/setting_currentValue" />

                            <TextView
                                android:id="@+id/textView_process_p_setting"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        
                        </LinearLayout>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="150dp"
                        android:layout_weight="1.5" >

                        <Button
                            android:id="@+id/button_minusa_p_setting"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="10dp"
                            android:text="-0.1" />

                        <Button
                            android:id="@+id/button_oneremember_p_setting"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_alignTop="@+id/button_minusa_p_setting"
                            android:text="@string/setting_onerememberPos" />
                        <Button
                            android:id="@+id/button_allremember_p_setting"
                            android:layout_width="180dp"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_alignBottom="@+id/button_minusb_p_setting"
                            android:text="@string/setting_allrememberPos" />

                        <Button
                            android:id="@+id/button_adda_p_setting"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_marginRight="20dp"
                            android:layout_marginTop="10dp"
                            android:text="+0.1" />

                        <Button
                            android:id="@+id/button_minusb_p_setting"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignLeft="@+id/button_minusa_p_setting"
                            android:layout_alignParentBottom="true"
                            android:layout_marginBottom="10dp"
                            android:text="-1" />

                        <Button
                            android:id="@+id/button_addb_p_setting"
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:layout_alignParentBottom="true"
                            android:layout_alignRight="@+id/button_adda_p_setting"
                            android:layout_marginBottom="10dp"
                            android:text="+1" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <TextView
            android:id="@+id/PSpinnerTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:background="@color/white"
            android:text="@string/setting_freeTeach"
            android:textColor="@color/blueviolet" />
    </FrameLayout>

</LinearLayout>